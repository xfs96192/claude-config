    <script>
        // Configuration
        const MAPPING = [
            { key: 'æ‚¦åŠ¨ç¨³äº«çŸ­æŒ', name: 'ç¨³äº«' },
            { key: 'ä¸°åˆ©/å¢ç›ˆ', name: 'åˆäº«' },
            { key: 'é€¸åŠ¨çŸ­æŒ', name: 'é€¸åŠ¨' },
            { key: 'æ‚¦åŠ¨çŸ­æŒ/å®šå¼€', name: 'æ‚¦åŠ¨' },
            { key: 'çµåŠ¨çŸ­æŒ', name: 'çµåŠ¨' },
            { key: 'å…´åŠ¨çŸ­æŒ', name: 'å…´åŠ¨' }
        ];

        // Expected Columns
        const COLS = {
            CATEGORY: 'æ¯åˆ†ç±»',
            NET_ASSETS: 'å‡€èµ„äº§(äº¿)',
            DURATION: 'ç»„åˆä¹…æœŸ',
            LEVERAGE: 'æ æ†',
            EQUITY: 'æƒç›Šä»“ä½',
            DERIVATIVES: 'è¡ç”Ÿå“ä»“ä½',
            FLAG: 'æ¯å­æ ‡å¿—'
        };

        let generatedData = [];
        let commodityData = {
            current: null,
            compare: null,
            change: null
        };

        async function readExcel(file) {
            return new Promise((resolve, reject) => {
                const reader = new FileReader();
                reader.onload = (e) => {
                    try {
                        const data = new Uint8Array(e.target.result);
                        const workbook = XLSX.read(data, { type: 'array' });
                        const firstSheet = workbook.Sheets[workbook.SheetNames[0]];
                        const jsonData = XLSX.utils.sheet_to_json(firstSheet);

                        const normalizedData = jsonData.map(row => {
                            const newRow = {};
                            Object.keys(row).forEach(key => {
                                newRow[key.trim()] = row[key];
                            });
                            return newRow;
                        });

                        resolve(normalizedData);
                    } catch (err) {
                        reject(err);
                    }
                };
                reader.onerror = reject;
                reader.readAsArrayBuffer(file);
            });
        }

        function extractDateFromFilename(filename) {
            const match = filename.match(/(\d{4}[-å¹´]?\d{2}[-æœˆ]?\d{2})/);
            return match ? match[0] : 'å½“æœŸ';
        }

        async function processFiles() {
            const currentFile = document.getElementById('currentFile').files[0];
            const compareFile = document.getElementById('compareFile').files[0];

            if (!currentFile || !compareFile) {
                alert("è¯·ä¸Šä¼ ä¸¤ä¸ªæ–‡ä»¶ï¼");
                return;
            }

            try {
                let currentData = await readExcel(currentFile);
                let compareData = await readExcel(compareFile);

                const filterData = (data) => {
                    return data.filter(row => {
                        const flag = row[COLS.FLAG];
                        if (!flag) return false;
                        const val = String(flag).trim();
                        return val === 'æ¯äº§å“' || val === 'éæ¯å­äº§å“';
                    });
                };

                currentData = filterData(currentData);
                compareData = filterData(compareData);

                const currentDate = extractDateFromFilename(currentFile.name);
                const compareDate = extractDateFromFilename(compareFile.name);

                generateTable(currentData, compareData, currentDate, compareDate);
                document.getElementById('exportBtn').classList.remove('hidden');
                document.getElementById('commodityInputSection').classList.remove('hidden');

                window.currentDateStr = currentDate;
                window.compareDateStr = compareDate;

                // ç›‘å¬é»„é‡‘ä»“ä½è¾“å…¥å˜åŒ–
                document.getElementById('commodityValue').addEventListener('input', updateCommodityData);
                document.getElementById('commodityCompareValue').addEventListener('input', updateCommodityData);
            } catch (error) {
                console.error(error);
                alert("å¤„ç†æ–‡ä»¶æ—¶å‡ºé”™: " + error.message);
            }
        }

        function parsePercentInput(val) {
            if (!val || val.trim() === '') return null;
            val = val.trim();
            if (val.endsWith('%')) {
                return parseFloat(val) / 100;
            }
            return parseFloat(val);
        }

        function updateCommodityData() {
            const currentVal = parsePercentInput(document.getElementById('commodityValue').value);
            const compareVal = parsePercentInput(document.getElementById('commodityCompareValue').value);

            commodityData.current = currentVal;
            commodityData.compare = compareVal;
            commodityData.change = (currentVal !== null && compareVal !== null) ? currentVal - compareVal : null;

            // æ›´æ–°è¡¨æ ¼æ˜¾ç¤º
            updateCommodityDisplay();
        }

        function updateCommodityDisplay() {
            const cell = document.getElementById('commodityDisplayCell');
            if (cell) {
                const valueText = formatValue(commodityData.current, 'percent');
                const changeHTML = getChangeBadge(commodityData.change, 'percent');
                cell.innerHTML = valueText + changeHTML;
            }
        }

        const parseNum = (val) => {
            if (typeof val === 'number') return val;
            if (typeof val === 'string') {
                val = val.trim();
                if (val.endsWith('%')) {
                    return parseFloat(val) / 100;
                }
                return parseFloat(val);
            }
            return 0;
        };

        function calculateTotalScale(data, categoryKey) {
            const items = data.filter(row => row[COLS.CATEGORY] === categoryKey);
            let totalAssets = 0;
            items.forEach(row => {
                let assets = row[COLS.NET_ASSETS];
                assets = parseNum(assets) || 0;
                totalAssets += assets;
            });
            return totalAssets;
        }

        function calculateWeightedAvg(data, categoryKey, metricKey) {
            const items = data.filter(row => row[COLS.CATEGORY] === categoryKey);
            if (items.length === 0) return null;

            let totalWeighted = 0;
            let totalAssets = 0;

            items.forEach(row => {
                let assets = row[COLS.NET_ASSETS];
                let metric = row[metricKey];

                assets = parseNum(assets) || 0;
                metric = parseNum(metric) || 0;

                totalWeighted += metric * assets;
                totalAssets += assets;
            });

            return totalAssets === 0 ? 0 : totalWeighted / totalAssets;
        }

        function formatValue(value, type) {
            if (value === null || value === undefined || isNaN(value)) return '-';
            if (Math.abs(value) < 0.000001) return '-';

            if (type === 'percent') {
                return (value * 100).toFixed(2) + '%';
            } else if (type === 'percent_int') {
                return (value * 100).toFixed(0) + '%';
            } else if (type === 'decimal') {
                return value.toFixed(2);
            } else if (type === 'integer') {
                return Math.round(value).toString();
            }
            return value;
        }

        function getChangeBadge(change, type) {
            if (change === null || change === undefined || isNaN(change) || Math.abs(change) < 0.000001) {
                return '';
            }

            const formattedChange = formatValue(Math.abs(change), type);
            const isPositive = change > 0;
            const arrow = isPositive ? 'â†‘' : 'â†“';
            const sign = isPositive ? '+' : '';
            const className = isPositive ? 'up' : 'down';

            return `<span class="change-badge ${className}"><span class="arrow">${arrow}</span>${sign}${formattedChange}</span>`;
        }

        function generateTable(currentData, compareData, currentDate, compareDate) {
            let html = `
                <div class="table-container">
                    <table class="custom-table" id="resultTable">
                        <thead>
                            <tr>
                                <th class="header-blue">äº§å“ç³»åˆ—</th>
                                <th class="header-blue">è§„æ¨¡(äº¿)</th>
                                <th class="header-blue">${currentDate}ä¹…æœŸ</th>
                                <th class="header-green">${currentDate}æ æ†</th>
                                <th class="header-red">${currentDate}æƒç›Šä»“ä½</th>
                                <th class="header-yellow">${currentDate}è¡ç”Ÿå“ä»“ä½</th>
                                <th class="header-purple">20251231é»„é‡‘åŠå•†å“ä»“ä½</th>
                            </tr>
                        </thead>
                        <tbody>
            `;

            generatedData = [];

            MAPPING.forEach((item, index) => {
                const rowData = { series: item.name };

                // Scale
                rowData.scale = calculateTotalScale(currentData, item.key);

                // Duration
                const curDur = calculateWeightedAvg(currentData, item.key, COLS.DURATION);
                const oldDur = calculateWeightedAvg(compareData, item.key, COLS.DURATION);
                rowData.dur = curDur;
                rowData.durChg = (curDur !== null && oldDur !== null) ? curDur - oldDur : null;

                // Leverage
                const curLev = calculateWeightedAvg(currentData, item.key, COLS.LEVERAGE);
                const oldLev = calculateWeightedAvg(compareData, item.key, COLS.LEVERAGE);
                rowData.lev = curLev;
                rowData.levChg = (curLev !== null && oldLev !== null) ? curLev - oldLev : null;

                // Equity - ç¨³äº«å’Œæ‚¦åŠ¨ç³»åˆ—æ²¡æœ‰æƒç›Šä»“ä½
                let curEq = null;
                let oldEq = null;
                if (item.name !== 'ç¨³äº«' && item.name !== 'æ‚¦åŠ¨') {
                    curEq = calculateWeightedAvg(currentData, item.key, COLS.EQUITY);
                    oldEq = calculateWeightedAvg(compareData, item.key, COLS.EQUITY);
                }
                rowData.eq = curEq;
                rowData.eqChg = (curEq !== null && oldEq !== null) ? curEq - oldEq : null;

                // Derivatives
                const curDer = calculateWeightedAvg(currentData, item.key, COLS.DERIVATIVES);
                const oldDer = calculateWeightedAvg(compareData, item.key, COLS.DERIVATIVES);
                rowData.der = curDer;
                rowData.derChg = (curDer !== null && oldDer !== null) ? curDer - oldDer : null;

                generatedData.push(rowData);

                const commodityCell = index === 0
                    ? `<td class="commodity-cell" rowspan="${MAPPING.length}" id="commodityDisplayCell">-</td>`
                    : '';

                html += `
                    <tr>
                        <td class="series-name">${item.name}</td>
                        <td class="value-cell">${formatValue(rowData.scale, 'integer')}</td>
                        <td class="value-cell">
                            ${formatValue(rowData.dur, 'decimal')}
                            ${getChangeBadge(rowData.durChg, 'decimal')}
                        </td>
                        <td class="value-cell">
                            ${formatValue(rowData.lev, 'percent_int')}
                            ${getChangeBadge(rowData.levChg, 'percent_int')}
                        </td>
                        <td class="value-cell">
                            ${formatValue(rowData.eq, 'percent')}
                            ${getChangeBadge(rowData.eqChg, 'percent')}
                        </td>
                        <td class="value-cell">
                            ${formatValue(rowData.der, 'percent')}
                            ${getChangeBadge(rowData.derChg, 'percent')}
                        </td>
                        ${commodityCell}
                    </tr>
                `;
            });

            html += `</tbody></table></div>`;
            document.getElementById('resultContainer').innerHTML = html;
        }

        function getExcelChangeText(change, type) {
            if (change === null || change === undefined || isNaN(change) || Math.abs(change) < 0.000001) {
                return '';
            }
            const formattedChange = formatValue(Math.abs(change), type);
            const isPositive = change > 0;
            const arrow = isPositive ? 'â†‘' : 'â†“';
            const sign = isPositive ? '+' : '';
            return `\n${arrow}${sign}${formattedChange}`;
        }

        function exportToExcel() {
            const currentDate = window.currentDateStr || 'å½“æœŸ';

            const wb = XLSX.utils.book_new();

            // åˆ›å»ºå·¥ä½œè¡¨æ•°æ®
            const wsData = [
                [
                    "äº§å“ç³»åˆ—",
                    "è§„æ¨¡(äº¿)",
                    `${currentDate}ä¹…æœŸ`,
                    `${currentDate}æ æ†`,
                    `${currentDate}æƒç›Šä»“ä½`,
                    `${currentDate}è¡ç”Ÿå“ä»“ä½`,
                    "20251231é»„é‡‘åŠå•†å“ä»“ä½"
                ]
            ];

            const changeInfo = [];

            generatedData.forEach(row => {
                changeInfo.push({
                    dur: row.durChg,
                    lev: row.levChg,
                    eq: row.eqChg,
                    der: row.derChg
                });

                wsData.push([
                    row.series,
                    formatValue(row.scale, 'integer'),
                    formatValue(row.dur, 'decimal') + getExcelChangeText(row.durChg, 'decimal'),
                    formatValue(row.lev, 'percent_int') + getExcelChangeText(row.levChg, 'percent_int'),
                    formatValue(row.eq, 'percent') + getExcelChangeText(row.eqChg, 'percent'),
                    formatValue(row.der, 'percent') + getExcelChangeText(row.derChg, 'percent'),
                    row.series === 'ç¨³äº«'
                        ? formatValue(commodityData.current, 'percent') + getExcelChangeText(commodityData.change, 'percent')
                        : ''
                ]);
            });

            const ws = XLSX.utils.aoa_to_sheet(wsData);

            // åˆå¹¶é»„é‡‘å•†å“ä»“ä½å•å…ƒæ ¼
            if (!ws['!merges']) ws['!merges'] = [];
            ws['!merges'].push({
                s: { r: 1, c: 6 },  // å¼€å§‹ï¼šç¬¬2è¡Œï¼Œç¬¬7åˆ—
                e: { r: MAPPING.length, c: 6 }  // ç»“æŸï¼šæœ€åä¸€è¡Œï¼Œç¬¬7åˆ—
            });

            const borderStyle = {
                top: { style: "thin" },
                bottom: { style: "thin" },
                left: { style: "thin" },
                right: { style: "thin" }
            };
            const alignCenter = {
                horizontal: "center",
                vertical: "center",
                wrapText: true
            };

            const colorBlue = "4472C4";
            const colorGreen = "548235";
            const colorRed = "C00000";
            const colorYellow = "FFC000";
            const colorPurple = "7030A0";
            const colorWhite = "FFFFFF";

            const range = XLSX.utils.decode_range(ws['!ref']);

            for (let R = range.s.r; R <= range.e.r; ++R) {
                for (let C = range.s.c; C <= range.e.c; ++C) {
                    const cell_address = XLSX.utils.encode_cell({ r: R, c: C });
                    if (!ws[cell_address]) continue;

                    let cellStyle = {
                        border: borderStyle,
                        alignment: alignCenter,
                        font: { name: "Calibri", sz: 11 }
                    };

                    if (R === 0) {
                        // è¡¨å¤´æ ·å¼
                        cellStyle.font.bold = true;
                        cellStyle.font.color = { rgb: colorWhite };

                        let bgColor = colorBlue;
                        if (C === 3) bgColor = colorGreen;
                        else if (C === 4) bgColor = colorRed;
                        else if (C === 5) bgColor = colorYellow;
                        else if (C === 6) bgColor = colorPurple;

                        cellStyle.fill = { fgColor: { rgb: bgColor } };
                    } else {
                        const dataRowIndex = R - 1;

                        if (C === 0) {
                            cellStyle.font.bold = true;
                        } else if (C >= 2 && C <= 6 && dataRowIndex < changeInfo.length) {
                            const changes = changeInfo[dataRowIndex];
                            let changeValue = null;

                            if (C === 2) changeValue = changes.dur;
                            else if (C === 3) changeValue = changes.lev;
                            else if (C === 4) changeValue = changes.eq;
                            else if (C === 5) changeValue = changes.der;
                            else if (C === 6) changeValue = commodityData.change;

                            if (changeValue !== null && !isNaN(changeValue) && Math.abs(changeValue) >= 0.000001) {
                                const isPositive = changeValue > 0;
                                // å¢åŠ ç”¨çº¢è‰²ï¼Œå‡å°‘ç”¨ç»¿è‰²
                                cellStyle.font.color = { rgb: isPositive ? colorRed : colorGreen };
                                cellStyle.font.bold = true;
                            }
                        }

                        // é»„é‡‘å•†å“ä»“ä½å•å…ƒæ ¼èƒŒæ™¯è‰²
                        if (C === 6) {
                            cellStyle.fill = { fgColor: { rgb: "FEF3C7" } };
                        }
                    }

                    ws[cell_address].s = cellStyle;
                }
            }

            ws['!cols'] = [
                { wch: 12 },
                { wch: 10 },
                { wch: 15 },
                { wch: 13 },
                { wch: 16 },
                { wch: 18 },
                { wch: 20 }
            ];

            ws['!rows'] = [{ hpt: 30 }];
            for (let i = 1; i <= generatedData.length; i++) {
                ws['!rows'][i] = { hpt: 40 };
            }

            XLSX.utils.book_append_sheet(wb, ws, "äº§å“è¿ä½œæ¦‚è§ˆ");

            const date = new Date();
            const dateStr = date.toISOString().split('T')[0];
            XLSX.writeFile(wb, `äº§å“è¿ä½œæ¦‚è§ˆä¿¡æ¯è¡¨_${dateStr}.xlsx`);
        }
    </script>
</body>

</html>